<% include ../partials/header %>
<div class="new_ecotourism">
	<form action="/ecotourism" method="POST" enctype="multipart/form-data">
		<h2>Add New Post</h2>
		<div class="container">
			<div class="form-group">
				<label for="Title">Title</label>
				<input type="text" class="form-control" id="Title" name="ecotourism[title]" placeholder="Title"
					required>
			</div>
			<div class="form-group">
				<label for="image">Image Url</label>
				<input type="file" class="form-control" id="image" name="image" accept="image/*" placeholder="Image"
					required>
			</div>
			<div class="form-group">
				<label for="description">Description</label>
				<textarea class="form-control" id="description" name="ecotourism[description]" placeholder="Description"
					required></textarea>
			</div>
			<div class="form-group">
				<label for="price">Price</label>
				<input type="number" class="form-control" id="price" name="ecotourism[price]" placeholder="Price"
					min="1" step="1" required>
			</div>
			<div class="form-group">
				<label for="phone_no">Phone No</label>
				<input type="number" class="form-control" id="phone_no" name="ecotourism[phone_no]"
					placeholder="Phone No" required>
			</div>
			<div class="form-group">
				<label for="Email">Email</label>
				<input type="email" class="form-control" id="Email" name="ecotourism[Email]" placeholder="Email"
					required>
			</div>
			<br>
			<button type="submit" class="btn btn-primary">Submit</button>
			<br><br>
			<a href="/ecotourism">Go Back</a>
		</div>
	</form>
</div>

<% include ../partials/footer %>